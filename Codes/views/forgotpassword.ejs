<% include layout.ejs %>
<div class="container-fluid">
        <div class="row">
            <div class="col-md-12"> 
          <div class="container-fluid">
            <div class="row">
                  <div class="col-md-6 login-form-1">
                      <div class="panel panel-default">
                        <div class="panel-body">
                          
                          <div class="text-center">
                              <h2 class="card-title mt-3 text-center">Forgot Password</h2>
                            <p>You can reset your password here.</p>
                            <div class="panel-body">
                              <form id="register-form" role="form" autocomplete="off" class="form" method="post">
                                <div class="form-group">
                                  <div class="input-group">
                                    <span class="input-group-addon"><i class=""></i></span>
                                    <input id="username"  title="Please fill out the field and contain only letters, numbers and underscores." name="username" placeholder="User name/Email" class="form-control"  type="username"  required pattern="\w+">
                                  </div>
                                  <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                    <input id="newpassword"  title="Password must contain at least 6 characters, including UPPER/lowercase and numbers." name="newpassword" placeholder="Enter new password" class="form-control"  type="password"  required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}">
                                  </div>
                                  <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                    <input id="Re-enterpassword"  title="Please enter the same Password as above." name="Re-enterpassword" placeholder="Re-enter password" class="form-control"  type="password"  required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}">
                                  </div>
                                </div>
                                <div class="form-group">
                                  <input name="resetpassword" class="btn btn-lg btn-primary btn-block" value="Reset Password" type="submit">
                                </div>                               
                                <!--<input type="hidden" class="hide" name="token" id="token" value=""> -->
                              </form>
                            </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
            </div>
            </div>
        </div>
</div>
      <% include footer.ejs %>
    </body>
    </html>