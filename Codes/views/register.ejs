<% include layout.ejs %>
<script src="../../js/register.js"></script>
<body>

    <div class="container">
    <hr>
    <div class="card bg-light">
    <article class="card-body mx-auto" style="max-width: 400px;">
        <h4 class="card-title mt-3 text-center">Create Account</h4>
        <form  class="needs-validation"  action="/" > 
         <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
             </div>
            <input name="" class="form-control" placeholder="First Name *" type="text"  pattern="[A-Za-z]*" required >
            <div class="valid-feedback">
                Looks good!
               </div>
               <div class="invalid-feedback">
                 Please provide First Name / valid Firstname!
               </div>
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
             </div>
            <input name="" class="form-control" placeholder="Last Name" type="text"  pattern="[A-Za-z]*" required >
            <div class="valid-feedback">
                Looks good!
               </div>
               <div class="invalid-feedback">
                 Please provide Lastname / valid Lastname!
               </div>
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
            </div>
            <select class="custom-select" style="max-width: 120px;">
                <option selected="">+1</option>
            </select>
            <input name="" class="form-control" placeholder="Phone Number"  type="tel" pattern="^\D?(\d{3})\D?\D?(\d{3})\D?(\d{4})$" required>
            <div class="valid-feedback">
                Looks good!
               </div>
               <div class="invalid-feedback">
                 Please provide phone number / valid phone number!
               </div>
            </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
             </div>
            <input name="" class="form-control" placeholder="Email Address" type="email"  pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
            <div class="valid-feedback">
                Looks good!
               </div>
               <div class="invalid-feedback">
                 Please provide Email / valid Email!
               </div>
        </div> <!-- form-group// -->
        
        
               <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-birthday-cake"></i> </span>
                 </div>
                <input name="" class="form-control" placeholder="Date Of Birth" type="date"  required>
                <div class="valid-feedback">
                    Looks good!
                   </div>
                   <div class="invalid-feedback">
                     Please provide DOB / valid DOB!
                   </div>
            
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-id-card"></i> </span>
            </div>
            <input name="" class="form-control" placeholder="SSN"  type="SSN" pattern="^[0-8]{1}[0-9]{2}[0-9]{2}[0-9]{4}$" required>
            <div class="valid-feedback">
                Looks good!
               </div>
               <div class="invalid-feedback">
                 Please provide SSN / valid SSN!
               </div>
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-users"></i> </span>
            </div>
            <input name="" class="form-control" placeholder="Employment Status"  type="text"  required>
            <div class="valid-feedback">
                Looks good!
               </div>
               <div class="invalid-feedback">
                 Please provide status / valid status!
               </div>
        </div>
         <!-- form-group// -->
       <!-- form-group end.// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input class="form-control" id="password" placeholder="Create Password" type="password" required>
            <div class="valid-feedback">
                Looks good!
               </div>
               <div class="invalid-feedback">
                 Please provide valid password
               </div>
        </div> <!-- form-group// -->
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input class="form-control" id="confirm_password" placeholder="Confirm Password" type="password" required>
            <div class="valid-feedback">
                Looks good!
               </div>
               <div class="invalid-feedback">
                 Please provide valid password
               </div>
        </div>
       <!-- form-group// -->                                      
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" > Register </button>
        </div> <!-- form-group// -->      
        <p class="text-center">Have an account? <a href="index.html">Log In</a> </p>                                                                 
    </form>
    </article>
    </div> <!-- card.// -->

    </div> 
    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
           <div class="modal-content">
              <div class="modal-header">
                 <div class="icon-box">
                    <i class="material-icons">&#xE876;</i>
                 </div>				
                 <h4 class="modal-title">Success!</h4>	
              </div>
              <div class="modal-body">
                 <p class="text-center">You have been Registered succesfully</p>
              </div>
              <div class="modal-footer">
                 <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
              </div>
           </div>
        </div>
     </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <script src="js/register.js"></script>
    </body>
<% include footer.ejs %>